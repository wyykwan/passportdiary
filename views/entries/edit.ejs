<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">editing: <%= entry.name %></h1>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/entries/<%= entry._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="entry[name]" value="<%= entry.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="entry[image]" value="<%= entry.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="entry[description]" value="<%= entry.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/entries">go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>